    "dompurify": "^3.0.9",
    "express": "^4.16.3",
    "express-jwt": "^8.4.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router-dom": "^6.22.3"
  },
  "devDependencies": {
