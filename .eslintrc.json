{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["react", "no-unsanitized"],
  "rules": {
    "no-unsanitized/method": "error",
    "no-unsanitized/property": "error",
    "no-undef": "off",
    "arrow-parens": "off",
    "comma-dangle": "warn",
    "max-len": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
